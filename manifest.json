{
  "name": "Manslater Helper",
  "description": "Toggle internal functionality on/off.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Manslater Toggle",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
