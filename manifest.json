{
  "name": "Manslater Capture",
  "description": "Capture messages from WhatsApp and Telegram",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Manslater Capture",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://web.telegram.org/*",
    "https://manslater.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
