{
  "name": "msghelp",
  "description": "Minimal extension that retrieves messages from WhatsApp Web DOM and stores them locally.",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "msghelp",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
